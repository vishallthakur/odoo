<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data noupdate="0">

        <template id="snippet_options_inherit" name="template_name" inherit_id="website.snippet_options">
            <xpath expr="//div[@data-js='HeaderLayout']//we-select" position="inside">
                <we-button title="Header 1"
                        data-name="header_header_1_opt"
                        data-trigger="regular_header_visibility_opt"
                        data-customize-website-views="theme_gatheraround.template_ga_header_1"
                        data-customize-website-variable="'header_1'"
                        data-img="/website/static/src/img/snippets_options/header_template_default.svg"/>
                <we-button title="Header 2"
                        data-name="header_header_2_opt"
                        data-trigger="regular_header_visibility_opt"
                        data-customize-website-views="theme_gatheraround.template_ga_header_2"
                        data-customize-website-variable="'header_2'"
                        data-img="/website/static/src/img/snippets_options/header_template_default.svg"/>
                <we-button title="Header 3"
                        data-name="header_header_3_opt"
                        data-trigger="regular_header_visibility_opt"
                        data-customize-website-views="theme_gatheraround.template_ga_header_3"
                        data-customize-website-variable="'header_3'"
                        data-img="/website/static/src/img/snippets_options/header_template_default.svg"/>
                <we-button title="Header 4"
                        data-name="header_header_4_opt"
                        data-trigger="regular_header_visibility_opt"
                        data-customize-website-views="theme_gatheraround.template_ga_header_4"
                        data-customize-website-variable="'header_4'"
                        data-img="/website/static/src/img/snippets_options/header_template_default.svg"/>
            </xpath>
        </template>

        <template id="snippet_options" name="additional e-commerce snippet options" inherit_id="website_sale.snippet_options">
            <xpath expr="//we-select[hasclass('o_wsale_ppr_submenu')]" position="inside">
                <we-button data-set-ppr="5">5</we-button>
                <we-button data-set-ppr="6">6</we-button>                
            </xpath>

            <xpath expr="//we-button[@data-select-class='o_wsale_design_grid']" position="after">
                <we-button data-select-class="o_wsale_design_advance_card"
                           data-customize-website-views="theme_gatheraround.products_design_advance_card">
                           Advance Card
                </we-button>               
            </xpath>

            <xpath expr="//we-checkbox[@data-customize-website-views='website_sale.products_description']" position="after">
                <we-checkbox string="Prod. Rating"
                            data-customize-website-views="theme_gatheraround.products_rating"
                            data-no-preview="true"
                            data-reload="/"/>

                <we-checkbox string="Prod. Out of Stock Badge"
                            data-customize-website-views="theme_gatheraround.out_of_stock_badge"
                            data-no-preview="true"
                            data-reload="/"/>
            </xpath>

            <xpath expr="//we-button[hasclass('o_we_add_to_cart_btn')]/.." position="inside">
                <we-button title="Quick View" class="fa fa-fw fa-eye tg_weproduct_quick_view"
                            data-customize-website-views="website_sale.products_quick_view"
                            data-no-preview="true"
                            data-reload="/"/>
            </xpath>
        </template>

    </data>
</odoo>
