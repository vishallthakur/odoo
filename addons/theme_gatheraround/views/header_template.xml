<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data noupdate="0">

        <template id="header_language_selector" name="Gather Around Header Langusge">
            <t t-set="active_lang" t-value="list(filter(lambda lg : lg[0] == lang, languages))[0]"/>
            <t t-set="language_selector_visible" t-value="len(languages) &gt; 1 or _selector_visible"/>
            <div t-attf-class="js_language_selector header_lang_dropdown #{_div_class}" t-if="language_selector_visible">
                <a t-attf-class="#{_link_class}">
                    <span t-if="not no_text" class="align-middle" >Select Language</span>
                </a>
                <div class="header_lang_selector d-flex flex-column mt-2 gap-1">
                    <t t-foreach="languages" t-as="lg">
                        <a t-att-href="url_for(request.httprequest.path + '?' + keep_query(), lang_code=lg[0])" t-attf-class="js_change_lang px-2 #{'active' if active_lang[0] == lg[0] else ''}" t-att-data-url_code="lg[1]">
                            <span t-if="not no_text" t-esc="lg[2].split('/').pop()"/>
                        </a>
                    </t>
                </div>
            </div>
        </template>

        <template id="header_pricelist_selector" name="Gather Around Header pricelist">
            <t t-nocache="" t-nocache-_div_class="_div_class" t-nocache-_link_class="_link_class" t-nocache-_simple_text="_simple_text" >
                <t t-set="website_sale_pricelists" t-value="website.get_pricelist_available(show_visible=True)"/>
                <div t-if="website_sale_pricelists and len(website_sale_pricelists)&gt;1" t-attf-class="header_pricelist_dropdown #{_div_class}">
                    <span t-if="_show_label" class="d-none d-lg-inline">Currency:</span>
                    <t t-set="curr_pl" t-value="website._get_current_pricelist()"/>
                    <a t-attf-class="#{_link_class}" data-bs-toggle="dropdown">
                        <span t-if="_simple_text">Select Pricelist</span>
                        <t t-else="" t-esc="curr_pl and curr_pl.name or ' - '"/>
                    </a>
                    <div class="header_pricelist_selector d-flex flex-column mt-2 gap-1">
                        <t t-foreach="website_sale_pricelists" t-as="pl">
                            <a t-att-href="'/shop/change_pricelist/%s' % pl.id" t-attf-class="px-2 #{'active' if pl == curr_pl else ''}">
                                <span class="switcher_pricelist" t-att-data-pl_id="pl.id" t-esc="pl.name"/>
                            </a>
                        </t>
                    </div>
                </div>
            </t>
        </template>

        <template id="header_setting_link" name="Header Setting Dropdown">
            <li t-attf-class="#{_item_class}">
                <a href="#" role="button" data-bs-toggle="dropdown" t-attf-class="dropdown-toggle btn #{_link_class}">
                    <div t-if="_icon" t-attf-class="#{_icon_wrap_class}">
                        <i t-attf-class="fa fa-1x fa-fw fa-gear #{_icon_class}"/>
                    </div>
                </a>
                <div t-attf-class="dropdown-menu js_usermenu #{_dropdown_menu_class}" role="menu">
                    <t t-call="theme_gatheraround.header_language_selector">
                        <t t-set="_link_class" t-valuef="btn d-flex align-items-center rounded-0 p-2 text-reset heading"/>
                    </t>
                    <div t-if="len(languages) &gt; 1 or _selector_visible" id="o_public_divider" class="dropdown-divider"/>
                    <t t-call="theme_gatheraround.header_pricelist_selector">
                        <t t-set="_link_class" t-valuef="btn d-flex align-items-center rounded-0 p-2 text-reset heading"/>
                        <t t-set="_simple_text" t-valuef="True"/>
                    </t>                    
                </div>
            </li>            
        </template>

        <template id="user_dropdown_sign_in_register" name="Add SignIn and Register" inherit_id="portal.user_dropdown">
            <xpath expr="//li" position="after">
                <li t-if="not is_connected" t-attf-class="#{_item_class} o_no_autohide_item">
                    <a href="#" role="button" data-bs-toggle="dropdown" t-attf-class="#{'' if _no_caret else 'dropdown-toggle'} btn #{_link_class}">
                        <div t-if="_icon" t-attf-class="#{_icon_wrap_class}">
                            <i t-attf-class="fa fa-1x fa-fw fa-user #{_icon_class}"/>
                        </div>
                        <span t-if="_user_name" t-attf-class="#{_user_name_class}"> Guest</span>
                    </a>
                    <div t-attf-class="dropdown-menu js_usermenu #{_dropdown_menu_class}" role="menu">
                        <a t-attf-href="/web/login" role="menuitem" id="o_logout" class="dropdown-item ps-3">
                            <i class="fa fa-fw fa-sign-in me-1 small text-primary"/> Login
                        </a>                        
                        <div id="o_public_divider" class="dropdown-divider"/>
                        <a t-attf-href="/web/signup" role="menuitem" id="o_logout" class="dropdown-item ps-3">
                            <i class="fa fa-fw fa-registered me-1 small text-primary"/> Register
                        </a>            
                    </div>
                </li>                
            </xpath>
        </template>

